@model EmpMVC.Models.EmpData;
@{
    ViewData["Title"] = "Edit";
}
  <div class="container my-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Employee Form</h4>
            </div>
            <div class="card-body">
                <form action="Submit" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="@Model.Name" class="form-control" id="Name" name="Name" placeholder="Enter employee name" required>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label">Address</label>
                         <input asp-for="@Model.Address" class="form-control" id="Address" name="Address" placeholder="Enter employee name" required>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-circle"></i> Submit
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="bi bi-arrow-clockwise"></i> Reset
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>



